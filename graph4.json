{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "15 Countries' GNI Value",
  "width": 700,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/JianingLiu-Tom/FIT3179Assignment2/main/API_NY.GNP.MKTP.CD_DS2_en_csv_v2_3057803.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Country Name",
      "type": "nominal",
      "axis": {"labelAngle": -15}
    },
    "y": {
      "field": "2018",
      "type": "quantitative",
      "title": "GNI (current US$)"
    },
    "color": {
      "field": "Country Name",
      "type": "nominal",
      "legend": {"orient": "left"},
      "scale": {
        "domain": [
          "United States",
          "China",
          "Japan",
          "Germany",
          "United Kingdom",
          "India",
          "France",
          "Italy",
          "Canada",
          "Korea",
          "Russia",
          "Brazil",
          "Australia",
          "Spain",
          "Mexico"
        ],
        "range": [
          "#54278f",
          "#a50f15",
          "#f03b20",
          "gold",
          "#000000",
          "#fc9272",
          "slategray",
          "#fb9a99",
          "#7a0177",
          "#e7298a"
        ]
      }
    },
    "tooltip": [
      {"field": "Country Name", "type": "nominal", "title": "Country Name"},
      {
        "field": "2018",
        "type": "quantitative",
        "title": "HDI",
        "format": "0.1f"
      }
    ]
  },
  "transform": [
    {
      "filter": {
        "field": "Country Name",
        "oneOf": [
          "United States",
          "China",
          "Japan",
          "Germany",
          "United Kingdom",
          "India",
          "France",
          "Italy",
          "Canada",
          "Korea",
          "Russia",
          "Brazil",
          "Australia",
          "Spain",
          "Mexico"
        ]
      }
    }
  ],
  "config": {}
}